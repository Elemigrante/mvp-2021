- flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{ :class => "alert alert-dismissible fade show alert-#{name.to_s == 'notice' ? 'success' : 'danger'}", :role => "alert" }
      %button{ :class => "btn-close btn-sm", "aria-hidden" => "true", "data-bs-dismiss" => "alert", "aria-label" => "Close", :type => "button" }
      = content_tag :div, msg, :id => "flash_#{name}"