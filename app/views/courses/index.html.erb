<div class="text-center mb-4">
  <h3>Courses
    <span class="badge bg-info">
      <%= @courses.count %>
    </span>
  </h3>
</div>

<section class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f| %>
          <%= f.label :title %>
          <%= f.search_field :title_cont, placeholder: 'title', class: 'form-control form-control-sm' %>
          <%= f.label :description %>
          <%= f.search_field :short_description_cont, placeholder: 'short_descr', class: 'form-control form-control-sm' %>
          <%= f.label :language %>
          <%= f.select :language_cont, Course.languages, include_blank: true %>
          <%= f.label :level %>
          <%= f.select :level_cont, Course.levels, include_blank: true %>
          <%= f.label :price %>
          <%= f.search_field :price_eq, placeholder: 'price', class: 'form-control form-control-sm' %>
          <%= f.label :teacher %>
          <%= f.search_field :user_email_cont, placeholder: 'email', class: 'form-control form-control-sm' %>
          <%= f.submit %>
          <%= link_to courses_path, class: 'btn btn-secondary', style: 'vertical-align: baseline;' do %>
            <i class="fas fa-sync"></i>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-10">
        <div class="row">
          <% @courses.each do |course| %>
            <%= render 'courses/course', course: course %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>