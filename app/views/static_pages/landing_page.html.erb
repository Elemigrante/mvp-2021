<div class="card jumbotron" style="min-height: 150px;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="text-center">
        <span class="display-5">What do you want to learn today?</span>
        <% if current_user %>
          <div class="form h-100 justify-content-center mt-3">
            <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f| %>
              <div class="searchbar">
                <%= f.search_field :title_cont, autocomplete: 'off', placeholder: "Search...", class: 'search_input' %>
                <button class="search_icon" type="submit">
                  <span class="fa fa-search"></span>
                </button>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-group">
  <div class="card card-body shadow-sm border" style="min-height: 150px;">
    <h1>
      <i class="fa fa-graduation-cap"></i>
    </h1>
    <%= Course.count %>
    online courses
    <div class="row"></div>
    Explore a variety of fresh topics
  </div>

  <div class="card card-body shadow-sm border" style="min-height: 150px;">
    <h1>
      <i class="fa fa-chalkboard-teacher">
        <!--.fa.fa-brain
        -->
      </i>
    </h1>
    <%= Course.distinct.count(:user_id) %>
    expert instructors
    <div class="row"></div>
    Find the right instructor for you
  </div>

  <div class="card card-body shadow-sm border" style="min-height: 150px;">
    <h1>
      <i class="fa fa-user-graduate"></i>
    </h1>
    <%= User.count %>
    active learners
    <div class="row"></div>
    Join the knowledge sharing community
  </div>

  <div class="card card-body shadow-sm border" style="min-height: 150px;">
    <h1>
      <i class="fa fa-infinity"></i>
    </h1>
    Lifetime access
    <div class="row"></div>
    Learn on your schedule
  </div>
</div>


<hr>
